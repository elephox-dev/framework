{
    "name": "philly/framework",
    "description": "Yet another PHP framework.",
    "license": "MIT",
    "homepage": "https://philly.ricardoboss.de",
    "authors": [
        {
            "name": "Ricaro Boss",
            "email": "contact@ricardoboss.de"
        }
    ],
    "require": {
        "wikimedia/composer-merge-plugin": "^2.0.1"
    },
    "require-dev": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-curl": "*",
        "vimeo/psalm": "^4.12",
        "phpunit/phpunit": "^9.5",
        "infection/infection": "^0.25",
        "mockery/mockery": "^1.4",
        "roave/security-advisories": "dev-latest"
    },
    "replace": {
        "philly/collection": "self.version",
        "philly/core": "self.version",
        "philly/di": "self.version",
        "philly/http": "self.version",
        "philly/support": "self.version",
        "philly/text": "self.version"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.x-dev"
        },
        "merge-plugin": {
            "require": [
                "modules/*/composer.json"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Philly\\Collection\\": "modules/Collection/src/",
            "Philly\\Core\\": "modules/Core/src/",
            "Philly\\DI\\": "modules/DI/src/",
            "Philly\\Http\\": "modules/Http/src/",
            "Philly\\Support\\": "modules/Support/src/",
            "Philly\\Text\\": "modules/Text/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Philly\\Collection\\": "modules/Collection/test/",
            "Philly\\Core\\": "modules/Core/test/",
            "Philly\\DI\\": "modules/DI/test/",
            "Philly\\Http\\": "modules/Http/test/",
            "Philly\\Support\\": "modules/Support/test/",
            "Philly\\Text\\": "modules/Text/test/"
        }
    }
}
