{
    "name": "philly/framework",
    "description": "Yet another PHP framework.",
    "license": "MIT",
    "homepage": "https://philly.ricardoboss.de",
    "authors": [
        {
            "name": "Ricaro Boss",
            "email": "contact@ricardoboss.de"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "require-dev": {
        "vimeo/psalm": "^4.11.2",
        "phpunit/phpunit": "^9.5.10",
        "infection/infection": "^0.25.3",
        "mockery/mockery": "^1.4",
        "roave/security-advisories": "dev-latest"
    },
    "replace": {
        "philly/http": "self.version"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Philly\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Philly\\": "test/"
        }
    },
    "scripts": {
        "unit-test": "XDEBUG_MODE=coverage phpunit --coverage-clover=tmp/clover.xml",
        "mutation-test": "XDEBUG_MODE=coverage infection --threads=$(nproc) --show-mutations --logger-github",
        "static-analysis": "psalm --shepherd"
    }
}
