{
    "name": "elephox/framework",
    "description": "Yet another PHP framework.",
    "license": "MIT",
    "homepage": "https://elephox.dev",
    "authors": [
        {
            "name": "Ricaro Boss",
            "email": "contact@ricardoboss.de"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "jetbrains/phpstorm-attributes": "^1.0",
        "ricardoboss/php-console-logger": "^1.8",
        "psr/container": "^1.1|^2.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "vimeo/psalm": "^4.14",
        "phpunit/phpunit": "^9.5",
        "infection/infection": "^0.25",
        "mockery/mockery": "^1.4",
        "roave/security-advisories": "dev-latest",
        "elephox/composer-module-sync": "^1.1",
        "phpbench/phpbench": "^1.2.1",
        "php-coveralls/php-coveralls": "^2.5"
    },
    "provide": {
        "psr/container-implementation": "1.0",
        "psr/http-message-implementation": "1.0"
    },
    "replace": {
        "elephox/collection": "self.version",
        "elephox/core": "self.version",
        "elephox/database": "self.version",
        "elephox/di": "self.version",
        "elephox/files": "self.version",
        "elephox/http": "self.version",
        "elephox/logging": "self.version",
        "elephox/support": "self.version",
        "elephox/text": "self.version"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Elephox\\Collection\\": "modules/Collection/src/",
            "Elephox\\Core\\": "modules/Core/src/",
            "Elephox\\Database\\": "modules/Database/src/",
            "Elephox\\DI\\": "modules/DI/src/",
            "Elephox\\Files\\": "modules/Files/src/",
            "Elephox\\Http\\": "modules/Http/src/",
            "Elephox\\Logging\\": "modules/Logging/src/",
            "Elephox\\Support\\": "modules/Support/src/",
            "Elephox\\Text\\": "modules/Text/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elephox\\Collection\\": "modules/Collection/test/",
            "Elephox\\Core\\": "modules/Core/test/",
            "Elephox\\Database\\": "modules/Database/test/",
            "Elephox\\DI\\": "modules/DI/test/",
            "Elephox\\Files\\": "modules/Files/test/",
            "Elephox\\Http\\": "modules/Http/test/",
            "Elephox\\Logging\\": "modules/Logging/test/",
            "Elephox\\Support\\": "modules/Support/test/",
            "Elephox\\Text\\": "modules/Text/test/"
        }
    },
    "scripts": {
        "update-readme": [
            "@putenv XDEBUG_MODE=off",
            "@php bin/update-readme-annotations.php --"
        ],
        "check-dependencies": [
            "@putenv XDEBUG_MODE=off",
            "@composer modules:check --"
        ],
        "unit-test": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=phpunit.xml.dist --"
        ],
        "static-analysis": [
            "@putenv XDEBUG_MODE=off",
            "psalm --"
        ],
        "mutation-test": [
            "@putenv XDEBUG_MODE=coverage",
            "infection --show-mutations --"
        ],
        "benchmark": [
            "@putenv XDEBUG_MODE=off",
            "phpbench run --report=overview --retry-threshold=5 --"
        ],
        "local-ci": [
            "@update-readme",
            "@check-dependencies",
            "@static-analysis",
            "@unit-test",
            "@mutation-test",
            "@benchmark"
        ],

        "ci:unit-test": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=phpunit.xml.dist --no-interaction --coverage-xml=build/coverage/coverage-xml --log-junit=build/coverage/junit.xml --coverage-clover=build/coverage/clover.xml --coverage-html=build/coverage/html"
        ],
        "ci:static-analysis": [
            "@putenv XDEBUG_MODE=off",
            "psalm --no-cache --output-format=github --long-progress"
        ],
        "ci:static-analysis:publish": [
            "@putenv XDEBUG_MODE=off",
            "psalm --no-cache --output-format=github --long-progress --shepherd"
        ],
        "ci:mutation-test": [
            "@putenv XDEBUG_MODE=coverage",
            "infection --min-covered-msi=90 --coverage=build/coverage --skip-initial-tests --logger-github --no-interaction"
        ],
        "ci:benchmark": [
            "@putenv XDEBUG_MODE=off",
            "phpbench run --report=overview --retry-threshold=5"
        ],
        "ci:publish-coverage": [
            "@putenv XDEBUG_MODE=off",
            "vendor/bin/php-coveralls -x build/coverage/clover.xml -o build/coverage/coveralls-upload.json -v"
        ]
    }
}
