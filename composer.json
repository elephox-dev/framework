{
    "name": "philly/base",
    "description": "A class library providing independent building blocks.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Ricaro Boss",
            "email": "contact@ricardoboss.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Philly\\Base\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Philly\\Base\\": "test/"
        }
    },
    "scripts": {
        "unit-test": "XDEBUG_MODE=coverage phpunit --coverage-clover=tmp/clover.xml",
        "mutation-test": "XDEBUG_MODE=coverage infection --threads=$(nproc) --no-progress --show-mutations --logger-github",
        "static-analysis": "psalm --shepherd"
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "require-dev": {
        "vimeo/psalm": "^4.11.2",
        "phpunit/phpunit": "^9.5.10",
        "infection/infection": "^0.25.3",
        "mockery/mockery": "^1.4"
    }
}
